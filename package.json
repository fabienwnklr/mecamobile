{
    "name": "garage",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "concurrently \"vue-cli-service serve\" \"npx nodemon server\"",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "format": "prettier --config ./.prettierrc --write \"./src/**/*.js\" \"./src/**/*.vue\" \"./server/*.js\" \"./server/**/*.js\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "core-js": "^3.6.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "es6-promise": "^4.2.8",
        "express": "^4.17.1",
        "helmet": "^4.6.0",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^2.2.5",
        "nodemailer": "^6.6.3",
        "nprogress": "^0.2.0",
        "sequelize": "^6.6.5",
        "tiptap-vuetify": "^2.24.0",
        "vue": "^2.6.11",
        "vue-router": "^3.2.0",
        "vuetify": "^2.5.0"
    },
    "devDependencies": {
        "@mdi/font": "^5.9.55",
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "babel-eslint": "^10.1.0",
        "concurrently": "^6.2.0",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^6.2.2",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "nodemon": "^2.0.12",
        "prettier": "^2.4.1",
        "sass": "^1.19.0",
        "sass-loader": "^8.0.0",
        "vue-cli-plugin-vuetify": "~2.0.6",
        "vue-template-compiler": "^2.6.11",
        "vuetify-loader": "^1.7.2"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "rules": {}
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "lint-staged": {
        "*": "prettier --config ./.prettierrc --write \"./src/**/*.js\" \"./src/**/*.vue\" \"./server/*.js\" \"./server/**/*.js\"",
        "*.js": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
}
